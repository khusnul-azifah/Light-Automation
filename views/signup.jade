doctype html
html
	head
		<link rel="shortcut icon" href="/images/big-bulbs.png" />
		title Light Automation
		meta(charset='utf-8')
		link(rel='stylesheet', href='/css/style.css')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		title Bootstrap 3.0 Grid System
		title Bootstrap
		link(href='/css/bootstrap-theme.css', rel='stylesheet')
		link(href='/css/bootstrap.css', rel='stylesheet')
		script(src="/javascripts/jquery.min.js")
		script(src='/javascripts/jquery.bootstrap-growl.js')
		script(src='/javascripts/bootstrap.js')
		style.
			body {  background-color: #efde4a;
					//- background-image:url("/images/03.jpg");
					position: fixed;
					top: 0;
					left: 0;
					padding-top:70px;
					word-wrap:break-word;
			}

	body
		.container
			center
				.row
					.col-sm-6.col-md-4.col-md-offset-4
						h1.text-center.signup-title Sign Up to Light Automation
						.account-wall
							img.profile-img(src="/images/bulb.jpg", style='width:125px; height:125px;' alt='')
							-if(message)
								.alert.alert-danger #{message}
							form(action='/signup', method='post').form-signup
								input.form-control(type='text', name='email', placeholder='Email', required='', autofocus='')
								input.form-control(type='password', name='password', placeholder='Password', required='')
								input.form-control(type='password', name='passwordconf', placeholder='Confirm Password', required='')
								button.btn.btn-lg.btn-primary.btn-block(type='submit')
									| Sign Up
								br
								p
									| Already have an account? 
									a(href='/login') Login